<% layout("/layouts/boilerplate") %>

<body>
  <div class="row">
    <div class="col-8 offset-2">
      <h2>Create New Listing</h2>
      <br /><br />
      <form
        action="/listings"
        method="post"
        class="needs-validation"
        novalidate
        enctype="multipart/form-data"
      >
        <div>
          <label for="title" class="form-label">Title</label>
          <input
            type="text"
            name="Listing[title]"
            placeholder="enter the title"
            class="form-control"
            required
          />
          <div class="valid-feedback">Title looks good</div>
          <div class="invalid-feedback">Enter Title</div>
        </div>
        <br /><br />
        <div>
          <label for="description" class="form-label">Description</label>
          <textarea
            name="Listing[description]"
            placeholder="enter description"
            cols="30"
            rows="3"
            class="form-control"
            required
          ></textarea>
          <div class="invalid-feedback">Description is neccessary</div>
        </div>
        <br /><br />

        <div>
          <label for="image" class="form-label">Upload Image</label>
          <input
            type="file"
            name="Listing[image]"
            class="form-control"
            required
          />
        </div>
        <br /><br />
        <div class="row">
          <div class="col-md-4">
            <label for="price" class="form-label">Price</label>
            <input
              type="number"
              name="Listing[price]"
              placeholder="enter price"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Enter price</div>
          </div>
          <br /><br />
          <div class="col-md-8">
            <label for="location" class="form-label">Location</label>
            <input
              type="text"
              name="Listing[location]"
              placeholder="enter location"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Location is neccessary</div>
          </div>
        </div>

        <br /><br />
        <div>
          <label for="country" class="form-label">Country</label>
          <input
            type="text"
            name="Listing[country]"
            placeholder="enter the country"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Country is neccessary</div>
        </div>
        <br /><br />
        <button class="btn btn-dark add-btn">Add</button>
      </form>
    </div>
  </div>
</body>
